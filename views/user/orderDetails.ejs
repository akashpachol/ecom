        <script>
  document.addEventListener("DOMContentLoaded", function() {
    const dateString = '<%= order.deliveryDate %>'; // Assuming you get the delivery date from your backend
    const formattedDate = dateString.replace(/-/g, '/');
    const deliveryDate = new Date(formattedDate);
    const currentDate = new Date();
    const sevenDaysInMillis = 7 * 24 * 60 * 60 * 1000;

    if (currentDate.getTime() - deliveryDate.getTime() <= sevenDaysInMillis) {
      // Check if the order is delivered
      if ('<%= order.status %>' === 'Delivered') {
        const returnButton = document.getElementById('returnButton');
        if (returnButton) {
          returnButton.style.display = 'block'; // Show the return button
        }
      }
    } else {
      // Hide the return button if more than 7 days have passed since delivery
      const returnButton = document.getElementById('returnButton');
      if (returnButton) {
        returnButton.style.display = 'none';
      }
    }
  });
</script>
