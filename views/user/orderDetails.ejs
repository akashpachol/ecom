<%- include('../Layout/UserHeader.ejs') %>

    <section class="content-main">

        <div class="card">
            <header class="card-header">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-4 col-md-4 mb-lg-0 mb-15">
                            <span>
                                <i class="material-icons md-calendar_today"></i> Order DATE:<b>
                                    <%= new Date(order.orderDate).toLocaleDateString() %>
                                </b>
                            </span> <br>
                            <small class="text-muted">Order ID: <%=order._id %></small>
                        </div>
                        <div class="col-lg-4 col-md-4 ">
                            <div class="text">
                                <h6 class="mb-1">Customer</h6>
                                <small class="text-muted">CUSTOMER NAME: <%=order.user.name %></small><br>
                                <small class="text-muted">CUSTOMER MOBILE: <%=order.user.mobile %></small>

                                <br>
                                <a href="#">View profile</a>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4  ">

                            <div class="text-center">
                                <h6 class="mb-1">Deliver to</h6>
                                <p class="mb-1">
                                    City: <%=order.address.city %>, <%=order.address.street %> <br>
                                            <%=order.address.houseName %> <br>
                                                <%=order.address.pincode %>
                                </p>
                                <a href="#">View profile</a>
                            </div>
                        </div>
                    </div>
                </div>

            </header>












            <div class="card-body">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th width="30%">Product</th>
                                            <th width="10%">Unit Price</th>
                                            <th width="10%">Quantity</th>
                                            <th width="10%" class="text-end">Total</th>
                                            <th width="15%" class="text-end">status</th>
                                            <th width="15%" class="text-end">Payment</th>
                                            <th width="15%" class="text-end">Action</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <% let subtotal=0; order.items.forEach(function(item) { 
                                            let total=item.product.discount_price * item.quantity;
                                            subtotal =order.totalAmount; %>
                                            <tr>
                                                <td>
                                                    <a class="itemside" href="#">
                                                        <div class="left">
                                                            <img src="/assets/imgs/productIMG/<%=item.product.image[0]%>"
                                                                width="40" height="40" class="img-xs" alt="Item">
                                                        </div>
                                                        <div class="info">
                                                            <%=item.product.name %>
                                                        </div>
                                                    </a>
                                                </td>
                                                <td>
                                                    ₹<%=item.product.discount_price %>
                                                </td>
                                                <td>
                                                    <%=item.quantity %>
                                                </td>
                                                <td class="text-end">
                                                    ₹<%= total %>
                                                </td>
                                                <td class="text-end">
                                                    <%= item.status %>
                                                </td>
                                                <td class="text-end">
                                                    <%= item.paymentMethod %>
                                                </td>
                                                <td class="text-end">
                                                    <% if (item.status=="Confirmed" ) { %> <button
                                                            class="btn bg-danger btn-sm" id="cancelModalData"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#cancelModal<%=item.product._id %>">cancel</button>
                                                        <% }else if (item.status=="Cancelled" ) {
                                                            %> <button
                                                            class="btn bg-danger btn-sm" id="cancelModalData"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#cancelModal<%=item.product._id %>" disabled>cancel</button>
                                                        <%
                                                        }
                                                        else if (item.status=="Delivered" ) {
                                                            %> <button
                                                            class="btn bg-success btn-sm" id="cancelModalData"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#cancelModal<%=item.product._id %>" >Return</button>
                                                        <%
                                                        }
                                                        else if (item.status=="Returned" ) {
                                                            %> <button
                                                            class="btn bg-success btn-sm" id="cancelModalData"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#cancelModal<%=item.product._id %>" disabled>Return</button>
                                                        <%
                                                        } %>
                                                </td>
                                            </tr>

                                            <div class="modal fade" id="cancelModal<%=item.product._id %>" tabindex="-1"
                                                aria-labelledby="cancelModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">Modal title
                                                            </h5>
                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div>
            <label class="form-label">Reason</label>
            <textarea placeholder="Type here" name="reason<%= item.product._id %>" class="form-control" rows="10" id="reason<%= item.product._id %>"></textarea>
            <div class="error-message" style="color: red;" id="reason-error<%= item.product._id %>"></div>
          </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Close</button>
                                                            <button type="button" class="btn btn-primary"
                                                                onclick="cancelProduct('<%= order._id %>','<%=item.product._id %>','<%= item.status %>')">Save
                                                                changes</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% }) %>
                                                <tr>
                                                    <td colspan="5"></td>
                                                    <td colspan="2">
                                                        <article class="">
                                                            <dl class="dlist">
                                                                <dt>Subtotal:
                                                                    ₹<%= subtotal %>
                                                                </dt>
                                                            </dl>
                                                            <dl class="dlist">
                                                                <dt>Shipping cost:
                                                                    ₹0.00</dt>
                                                            </dl>
                                                            <dl class="dlist">
                                                                <dt>Grand total:
                                                                    <b class="h5">₹<%= subtotal %></b>
                                                                </dt>
                                                            </dl>
                                                            <dl class="dlist">
                                                                <dt class="text-muted">Status:

                                                                    <span
                                                                        class="badge rounded-pill alert-success text-success">Payment
                                                                        done</span>
                                                                </dt>
                                                            </dl>
                                                        </article>
                                                    </td>
                                                </tr>
                                    </tbody>

                                </table>
                            </div> <!-- table-responsive// -->
                        </div>

                        <!-- Modal -->



                    </div>
                </div>

            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>

    <script>
        function cancelProduct(id, productId,status) {
            const reason = document.getElementById(`reason${productId}`).value;
            console.log(id, "akkkkk", productId);


            if (!reason) {
                alert('Please select an address.');

            }
            const requestData = {

                reason,
                productId
            };
if (status==="Confirmed") {

    Swal.fire({
        title: 'Confirm Deletion',
        text: 'Are you sure you want to cancel the product?',   
        icon: 'question',
        showCancelButton: true,
        confirmButtonText: 'Yes,ok',
        cancelButtonText: 'Cancel',
    }).then((result) => {
        if (result.isConfirmed) {
            
            fetch(`/orderCancel?id=${id}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(requestData),
            })
                .then(response => response.json())
                .then(data => {
              
                    if (data.message) {
                        location.reload();
                        console.log("sucess");
                    } else {
                        alert('Error occurred while placing order');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error occurred while placing order');
                });
        }
    });



   

}else if (status==="Delivered") {


    Swal.fire({
        title: 'Confirm Deletion',
        text: 'Are you sure you want to return the product?',
        icon: 'question',
        showCancelButton: true,
        confirmButtonText: 'Yes,ok',
        cancelButtonText: 'Cancel',
    }).then((result) => {
        if (result.isConfirmed) {
            
            fetch(`/return?id=${id}`, {
      method: 'POST',
      headers: {
          'Content-Type': 'application/json',
      },
      body: JSON.stringify(requestData),
  })
      .then(response => response.json())
      .then(data => {
          if (data.success) {
              location.reload();
              console.log("sucess");
          } else {
              alert('Error occurred while placing order');
          }
      })
      .catch(error => {
          console.error('Error:', error);
          alert('Error occurred while placing order');
      });
        }
    });




   
}

           
        }




    </script>

