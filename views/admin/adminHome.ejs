                <h5 class="card-title">Sale statistics</h5>
                <input type="hidden" value="<%= monthlyOrderCounts %>" id="monthlySalesArray" />
                <input type="hidden" value="<%= dailyOrderCounts %>" id="dailyOrderArray" />
               
            
